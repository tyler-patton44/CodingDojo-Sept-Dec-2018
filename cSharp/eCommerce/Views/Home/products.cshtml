<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Hello</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style2.css"/>
</head>
<body>
    @{
        List<products> allProd = Model.products;
    }
    <nav>
        <h2>TyDye Market</h2>
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/orders">Orders</a>
        <a href="/customers">Customers</a>
        <a href="/">Settings</a>
    </nav>
    @model IndexView
    <div class="main-content">
    <form action="createProduct" method="post">
        <h2>Add Product</h2>
        <div class="form-group">
            <label asp-for="product.name"></label>
            <span asp-validation-for="product.name"></span>
            <input type="text" class="form-control" placeholder="Product Name" asp-for="product.name">
        </div>
        <div class="form-group">
            <label asp-for="product.image"></label>
            <span asp-validation-for="product.image"></span>
            <input type="text" class="form-control" asp-for="product.image">
        </div>
        <div class="form-group">
            <label asp-for="product.description"></label>
            <span asp-validation-for="product.description"></span>
            <textarea class="form-control" rows="3" placeholder="Description..." asp-for="product.description"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="product.quanity"></label>
            <span asp-validation-for="product.quanity"></span>
            <input type="number" class="form-control" asp-for="product.quanity">
        </div>
        <button type="submit" class="btn btn-primary">Add product</button>
    </form>
        <div class="container">
        <div class="card-deck mb-3 text-center">
            @foreach(var prod in allProd){
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">@prod.name</h4>
                </div>
                <div class="card-body">
                    <img src="@prod.image" alt="prod" style="width:100px; height:100px;">
                    <p>(@prod.quanity left)</p>
                </div>
            </div>
            }
        </div>
    </div>
    </div>

</body>
</html>