<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Hello</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <header>
    <h1>Register</h1>
    <a class="btn btn-primary" href="/login">Login</a>
    </header>
    @model Users
    <form action="registration" method="post">
        <div class="form-group">
            <label asp-for="firstName"></label>
            <span asp-validation-for="firstName"></span>
            <input type="text" class="form-control" placeholder="First Name" asp-for="firstName">
        </div>
        <div class="form-group">
            <label asp-for="lastName"></label>
            <span asp-validation-for="lastName"></span>
            <input type="text" class="form-control" placeholder="Last Name" asp-for="lastName">
        </div>
        <div class="form-group">
            <label asp-for="email"></label>
            <span asp-validation-for="email"></span>
            <input type="text" class="form-control" placeholder="example@samp.com" asp-for="email">
        </div>
        <div class="form-group">
            <label asp-for="password"></label>
            <span asp-validation-for="password"></span>
            <input type="password" class="form-control" placeholder="Password" asp-for="password">
        </div>
        <div class="form-group">
            <label asp-for="confirm"></label>
            <span asp-validation-for="confirm"></span>
            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="confirm">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>


</body>
</html>