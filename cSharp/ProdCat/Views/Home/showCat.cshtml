<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Hello</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style2.css"/>
</head>
<body>
    <header>
    <h1>TyDye Market</h1>
    <a class="btn btn-primary" href="/categories">Home</a>
    </header>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@ViewBag.Category.name</h1>
         </div>
    </div>
    <ul class="list-group">
        <h2>Categories</h1>
        @foreach(var x in ViewBag.prodCat){
        @foreach(var prod in x.allAssociations){
            <li class="list-group-item"><a href="/showProd/@prod.product.productId">@prod.product.name</a></li>
        }
        }
    </ul>
        @model associations
        <form asp-action="createCatAssociation" asp-controller="Home" method="post">
            <h2>Add Product</h2>
            <div class="form-group">
                <label asp-for="productId">Product:</label>
                <span asp-validation-for="productId"></span>
                <select class="form-control" asp-for="productId">
                    @foreach(var x in ViewBag.Products){
                        <option value="@x.productId">@x.name</option>
                    }
                    
                </select>
            </div>
            <input type="hidden" value="@ViewBag.Category.categoryId" asp-for="categoryId">

            <button type="submit" class="btn btn-primary">Add category</button>
        </form>

</body>
</html>