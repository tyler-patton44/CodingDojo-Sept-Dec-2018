<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Hello</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <header>
    <h1>TyDye Market</h1>
    </header>
    <nav>
            <a href="/">Products</a>
            <p> | </p>
            <a href="/categories">Categories</a>
    </nav>
    @model products
    <div class="container">
        <form action="createProduct" method="post">
            <h2>Add Product</h2>
            <div class="form-group">
                <label asp-for="name"></label>
                <span asp-validation-for="name"></span>
                <input type="text" class="form-control" placeholder="Product Name" asp-for="name">
            </div>
            <div class="form-group">
                <label asp-for="description"></label>
                <span asp-validation-for="description"></span>
                <textarea class="form-control" rows="3" placeholder="Description..." asp-for="description"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="price"></label>
                <span asp-validation-for="price"></span>
                <input type="number" step="0.01" class="form-control" asp-for="price">
            </div>
            <button type="submit" class="btn btn-primary">Add product</button>
        </form>
        <div id="divider"></div>
        <ul class="list-group">
            <h2>Existing Products</h1>
            <div class="scroll-box">
            @foreach(var prod in ViewBag.Products){
            <li class="list-group-item"><a href="/showProd/@prod.productId">@prod.name</a></li>
            }
            </div>
        </ul>
    </div>

</body>
</html>