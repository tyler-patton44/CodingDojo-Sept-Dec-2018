<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Test</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <nav>
        <h1>Friends.com</h1>
    </nav>
    <% JSON.stringify(messages) %> 
    <div class="containment">
        <form action="/login" method="POST">
            <h2>Login</h2>
            <div class="form-group">
                    <% if(messages.loginEmail) { %>
                        <% for (var x of messages.loginEmail) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                <label>Email:</label>
                <input type="text" class="form-control" placeholder="Enter Email" name="loginEmail">
                <small id="emailHelp" class="form-text text-muted">Your email must be atleast 2 characters.</small>
            </div>
            <div class="form-group">
                    <% if(messages.loginPassword) { %>
                        <% for (var x of messages.loginPassword) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                <label>Password:</label>
                <input type="password" class="form-control" placeholder="Enter Password" name="loginPassword">
                <small id="emailHelp" class="form-text text-muted">Your password must be atleast 8 characters.</small>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        <form action="/register" method="POST">
            <h2>Register</h2>
            <div class="form-group">
                    <% if(messages.firstName) { %>
                        <% for (var x of messages.firstName) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                    <label>First Name:</label>
                <input type="text" class="form-control" placeholder="Enter First Name" name="firstName">
                <small id="emailHelp" class="form-text text-muted">Your first name must be atleast 2 characters.</small>
            </div>
            <div class="form-group">
                    <% if(messages.lastName) { %>
                        <% for (var x of messages.lastName) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                <label>Last Name:</label>
                <input type="text" class="form-control" placeholder="Enter Last Name" name="lastName">
                <small id="emailHelp" class="form-text text-muted">Your last name must be atleast 2 characters.</small>
            </div>
            <div class="form-group">
                    <% if(messages.email) { %>
                        <% for (var x of messages.email) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                <label>Email:</label>
                <input type="text" class="form-control" placeholder="Enter Email" name="email">
                <small id="emailHelp" class="form-text text-muted">Your email must be atleast 2 characters.</small>
            </div>
            <div class="form-group">
                    <% if(messages.password) { %>
                        <% for (var x of messages.password) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                <label>Password:</label>
                <input type="password" class="form-control" placeholder="Enter Password" name="password">
                <small id="emailHelp" class="form-text text-muted">Your password must be atleast 8 characters.</small>
            </div>
            <div class="form-group">
                    <% if(messages.confirm) { %>
                        <% for (var x of messages.confirm) { %>
                            <h6><%= x %></h6>
                        <% } %>
                    <% } %>
                <label>Confirm Password:</label>
                <input type="password" class="form-control" placeholder="Confirm Password" name="confirm">
                <small id="emailHelp" class="form-text text-muted">Your password must be atleast 8 characters.</small>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>  
</body>
</html>