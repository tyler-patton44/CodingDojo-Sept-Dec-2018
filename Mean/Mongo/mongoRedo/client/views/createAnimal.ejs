<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Test</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <nav>
        <h1>Tydye Animal Creation Center</h1>
        <a href="/" class="btn btn-primary">View Animals</a>
    </nav>
    <% JSON.stringify(messages) %> 
    <form class="shadow-sm" action="/formInfo" method="POST">
        <h2>Create Animal</h2>
        <div class="form-group">
                <% if(messages.name) { %>
                    <% for (var x of messages.name) { %>
                        <h6><%= x %></h6>
                    <% } %>
                <% } %>
            <label for="name">Name:</label>
            <input type="text" class="form-control" placeholder="Enter Name" name="name">
            <small id="emailHelp" class="form-text text-muted">Your name must be atleast 2 characters.</small>
        </div>
        <div class="form-group">
                <% if(messages.animal) { %>
                    <% for (var x of messages.animal) { %>
                        <h6><%= x %></h6>
                    <% } %>
                <% } %>
            <label for="content">Animal:</label>
            <input type="text" class="form-control" placeholder="Enter Animal Name" name="animal">
            <small id="emailHelp" class="form-text text-muted">Your animal name must be atleast 1 character.</small>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</body>
</html>